<table class="index_table">
  <thead>
    <tr>
      <th>学年</th>
      <th>性別</th>
      <th>氏名</th>
      <!-- ko foreach: periods -->
        <th data-bind="text: time"></th>
      <!-- /ko -->
    </tr>
  </thead>
  <tbody data-bind="foreach: { data: staffs, as: 'staff' }">
    <tr data-bind="css: { even: $index() % 2 == 1 }">
      <td data-bind="text: grade"></td>
      <td data-bind="text: gender"></td>
      <td data-bind="text: name"></td>
      <!-- ko foreach: { data: $parent.periods, as: 'period' } -->
        <td>
          <span data-bind="text: staff.teamWorkingWith(period)"></span>
        </td>
      <!-- /ko -->
    </tr>
  </tbody>
</table>

<div id="selector">
  <div id="selector-header">
    <h1>チームを選択</h1>
    <div id="selector-close">&times;</div>
  </div>
  <div id="selector-body">
    <ul>
      <li>取消</li>
      <!-- ko foreach: { data: teams, as: 'team' } -->
        <li data-bind="text: team.name"></li>
      <!-- /ko -->
    </ul>
  </div>
</div>
