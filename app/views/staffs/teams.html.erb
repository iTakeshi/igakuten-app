<%= javascript_include_tag 'page_specific/staffs_teams' %>

<table>
  <thead>
    <tr>
      <th>学年</th>
      <th>性別</th>
      <th>氏名</th>
      <!-- ko foreach: teams -->
        <th data-bind="text: name"></th>
      <!-- /ko -->
    </tr>
  </thead>
  <tbody data-bind="foreach: { data: staffs, as: 'staff' }">
    <tr>
      <td data-bind="text: grade"></td>
      <td data-bind="text: gender"></td>
      <th data-bind="text: name"></th>
      <!-- ko foreach: { data: $parent.teams, as: 'team' } -->
        <td data-bind="click: function(data, event) { staff.toggle(team, data, event) }, css: staff.participateIn(team)"></td>
      <!-- /ko -->
    </tr>
  </tbody>
</table>

<style type="text/css">
  .participated {
    background: red;
  }
</style>
